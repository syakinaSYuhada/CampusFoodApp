<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.campus.foodorder.ui.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_login_to_student"
            app:destination="@id/studentDashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_login_to_vendor"
            app:destination="@id/vendorDashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/studentDashboardFragment"
        android:name="com.campus.foodorder.ui.student.StudentDashboardFragment"
        android:label="Student Dashboard">
        <action
            android:id="@+id/action_to_create_order"
            app:destination="@id/createOrderFragment" />
        <action
            android:id="@+id/action_to_student_orders"
            app:destination="@id/studentOrdersFragment" />
    </fragment>

    <fragment
        android:id="@+id/studentOrdersFragment"
        android:name="com.campus.foodorder.ui.student.StudentOrdersFragment"
        android:label="My Orders" />

    <!-- Phase 2 Lab: Order Creation Fragment -->
    <fragment
        android:id="@+id/createOrderFragment"
        android:name="com.campus.foodorder.ui.student.CreateOrderFragment"
        android:label="Place Order">
        <argument
            android:name="menuItem"
            app:argType="com.campus.foodorder.data.model.MenuItem" />
    </fragment>

    <fragment
        android:id="@+id/vendorDashboardFragment"
        android:name="com.campus.foodorder.ui.vendor.VendorDashboardFragment"
        android:label="Vendor Dashboard">
        <action
            android:id="@+id/action_to_vendor_orders"
            app:destination="@id/vendorOrdersFragment" />
    </fragment>

    <fragment
        android:id="@+id/vendorOrdersFragment"
        android:name="com.campus.foodorder.ui.vendor.VendorOrdersFragment"
        android:label="Pending Orders" />

</navigation>